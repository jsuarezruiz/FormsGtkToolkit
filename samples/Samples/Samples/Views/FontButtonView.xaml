<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsGtkToolkit.Samples.Views.FontButtonView"
             xmlns:controls="clr-namespace:FormsGtkToolkit.Controls;assembly=FormsGtkToolkit.Controls"
             Title="FontButton">
    <ContentPage.Content>
        <StackLayout>
            <controls:FontButton
                Title="Choose your font"
                FontName="Verdana"
                ShowSize="true"
                ShowStyle="true"
                HeightRequest="48"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>